{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES6"],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
      "task-scheduler-entities": ["./src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
